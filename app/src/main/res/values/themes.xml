        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorBlack90</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/jakarta_sans</item>
    </style>
