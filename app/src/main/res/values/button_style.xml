<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MangaKyuTextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MangaKyuTextStyle.Body3.LightGrey70</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:insetLeft">@dimen/dimen_0dp</item>
        <item name="android:insetRight">@dimen/dimen_0dp</item>
        <item name="android:minWidth">@dimen/dimen_0dp</item>
        <item name="android:paddingStart">@dimen/dimen_0dp</item>
        <item name="android:paddingEnd">@dimen/dimen_0dp</item>
    </style>

    <style name="MangaKyuOutlineButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="itemIconPadding">0dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <style name="MangaKyuOutlineButtonStyle.Grey">
        <item name="strokeColor">@color/colorLightGrey30</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>